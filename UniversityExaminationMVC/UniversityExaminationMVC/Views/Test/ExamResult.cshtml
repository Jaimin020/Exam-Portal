@using UniversityExaminationMVC.Models
@{
    ViewBag.Title = "ExamResult";
    Layout = "~/Views/Shared/_LayoutPage_Student.cshtml";
}

<h2>ExamResult</h2>

<h2>@ViewBag.Exam.Name</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Name</th>
            <th scope="col">Subject</th>
            <th scope="col">Marks</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Paper ex in ViewBag.Papers)
        {

            <tr>
                <th scope="row">@ex.paperDate</th>
                <td>@ex.Name</td>
                <td>@ex.Subject.Name</td>
                <td>
                    @{ int mark = 0;
                        foreach (PaperScore ps in ViewBag.PaperScore) {
                            if (ps.Paper_Id == ex.Id) {
                                mark = ps.Marks;

                            }
                        }
                    }
                    @mark

                </td>
            </tr>

        }

    </tbody>
</table>